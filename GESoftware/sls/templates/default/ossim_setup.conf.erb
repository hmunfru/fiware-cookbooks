# ossim configuration file
#
# /etc/ossim/ossim_setup.conf
#
# Generated by Chef for <%= node[:fqdn] %>

admin_dns=<%= node[:ossim][:server][:admin_dns]%>
admin_gateway=<%= node[:ossim][:server][:admin_gateway]%>
admin_ip=<%= node[:ossim][:server][:admin_ip]%>
admin_netmask=<%= node[:ossim][:server][:admin_netmask]%>
domain=<%= node[:ossim][:server][:domain]%>
email_notify=<%= node[:ossim][:server][:email_notify]%>
first_init=no
hostname=<%= node[:hostname]%>
interface=<%= node[:ossim][:server][:interface]%>
language=en
mailserver_relay=no
mailserver_relay_passwd=unconfigured
mailserver_relay_port=25
mailserver_relay_user=unconfigured
ntp_server=<%= node[:ossim][:server][:ntp_server]%>
profile=<%= node[:ossim][:server][:profile]%>
upgrade=no
version=1.2

[database]
acl_db=ossim_acl
db_ip=<%= node[:ossim][:server][:db_ip]%>
db_port=<%= node[:ossim][:server][:db_port]%>
event_db=alienvault_siem
ocs_db=ocsweb
ossim_db=alienvault
osvdb_db=osvdb
pass=<%= node[:ossim][:server][:db_pass]%>
rebuild_database=no
type=mysql
user=<%= node[:ossim][:server][:db_user]%>

[expert]
profile=server

[firewall]
active=yes

[framework]
framework_https=yes
framework_https_cert=default
framework_https_key=default
framework_ip=<%= node[:ossim][:frameworkd][:server_ip]%>
framework_port=<%= node[:ossim][:frameworkd][:server_port]%>

[sensor]
detectors=<%= node[:ossim][:sensor][:detectors]%>
ids_rules_flow_control=<%= node[:ossim][:sensor][:ids_rules_flow_control]%>
interfaces=<%= node[:ossim][:plugin_defaults][:interface]%>
ip=<%= node[:ossim][:plugin_defaults][:sensor]%>
monitors=<%= node[:ossim][:sensor][:monitors]%>
mservers=no
name=alienvault
netflow=yes
netflow_remote_collector_port=555
networks=192.168.0.0/16,172.16.0.0/12,10.0.0.0/8
override_sensor=False
pci_express=yes
rsyslog_dnslookups_disable=yes
tzone=<%= node[:ossim][:plugin_defaults][:tzone]%>

[server]
alienvault_ip_reputation=enabled
server_ip=<%= node[:ossim][:server][:ip]%>
server_license=no
server_plugins=<%= node[:ossim][:server][:plugins]%>
server_port=<%= node[:ossim][:server][:listen_port]%>
server_pro=no

[ssl]
socat=<%= node[:ossim][:ssl][:socat]%>
cert=<%= node[:ossim][:ssl][:cert]%>
listen_port=<%= node[:ossim][:ssl][:port]%>

[snmp]
community=public
snmpd=no
snmptrap=no

[update]
update_proxy=disabled
update_proxy_dns=my.proxy.com
update_proxy_pass=disabled
update_proxy_port=disabled
update_proxy_user=disabled

[vpn]
vpn_infraestructure=yes
vpn_net=10.67.68
vpn_netmask=255.255.255.0
vpn_port=33800

